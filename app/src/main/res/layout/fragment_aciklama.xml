<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

    android:id="@+id/aygun"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.AciklamaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="5dp"
        android:id="@+id/cons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/geriback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/back"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Ürün Açıklama">

        </TextView>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/ölçüler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cons"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="30dp"
        android:text="Modelin Ölçüleri"
        android:textColor="@color/black"
        android:textSize="20dp">

    </TextView>

    <TextView

        android:id="@+id/boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boy:1.70"
        app:layout_constraintTop_toBottomOf="@+id/ölçüler"
        app:layout_constraintStart_toStartOf="@+id/ölçüler"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp">

    </TextView>
    <TextView

        android:id="@+id/göğüs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Göğüs:87"
        app:layout_constraintTop_toBottomOf="@+id/boy"
        app:layout_constraintStart_toStartOf="@+id/boy"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp">

    </TextView>

    <TextView

        android:id="@+id/bel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bel:68"
        app:layout_constraintTop_toBottomOf="@+id/göğüs"
        app:layout_constraintStart_toStartOf="@+id/göğüs"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp">

    </TextView>

    <TextView

        android:id="@+id/kalça"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalça:98"
        app:layout_constraintTop_toBottomOf="@+id/bel"
        app:layout_constraintStart_toStartOf="@+id/bel"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp">

    </TextView>

    <TextView

        android:id="@+id/manken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manken:38/M"
        app:layout_constraintTop_toBottomOf="@+id/kalça"
        app:layout_constraintStart_toStartOf="@+id/kalça"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="15dp">

    </TextView>








</androidx.constraintlayout.widget.ConstraintLayout>