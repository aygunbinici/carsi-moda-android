<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.HesabimFragment">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hesabım"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="22dp"
            android:gravity="center">

        </TextView>

    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tasarim2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/kullanici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kullanıcı"
            android:textStyle="italic"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <Button
            android:id="@+id/buttondelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:text="Çıkış"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/login"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/kullanici">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/tasarim1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#F6F4F4">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HESABIM"
                    android:textColor="#808080"
                    android:textSize="17sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">
                </TextView>

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="155dp"
                    android:layout_height="60dp"
                    android:text="Giriş Yap"
                    android:textColor="@color/black"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/buton_bg"/>

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="155dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/buton2_bg"
                    android:text="Kayıt Ol"
                    android:textColor="#ff0000 " />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Şifremi Unuttum"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="50dp">
                </TextView>
                <TextView
                    android:id="@+id/key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_key"
                    android:textSize="26dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#D8D8D8">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="POPÜLER SAYFALAR"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sipariş Takip"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="50dp">
                </TextView>

                <TextView
                    android:id="@+id/takip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_shop2"
                    android:textColor="@color/black"
                    android:textSize="26dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D8D8D8">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Havale Bildirim"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="50dp">
                </TextView>

                <TextView
                    android:id="@+id/havale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_money"
                    android:textSize="26dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#D8D8D8">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DİĞER"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hakkımızda"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D8D8D8">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mesafeli Satış Sözleşmesi"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp">
                </TextView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D8D8D8">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Gizlilik ve Güvenlik Sözleşmesi"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D8D8D8">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="İletişim"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D8D8D8">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sıkça Sorulan Sorular"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="#D8D8D8">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Versiyon 1.0.2"
                    android:textSize="14dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>

     </androidx.core.widget.NestedScrollView>

</LinearLayout>
